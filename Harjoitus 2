using System;

namespace Harjoituksia_B2
{
    class Program
    {
        static void Main(string[] args)
        {
            // Tulostetaan lasku
            Console.WriteLine("x = y - 2");
            // Pyydetään käyttäjältä y:n arvo
            Console.Write("y:n arvo: ");
            // Tallennetaan käyttäjän syöttämä arvo muuttujaan y
            int y = int.Parse(Console.ReadLine());
            // Lasketaan lasku ja tallennetaan tulos muuttujaan x
            int x = y - 2;
            // Tulostetaan laskun tulos
            Console.WriteLine("x = " + x);
        }
    }
}
